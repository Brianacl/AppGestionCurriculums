<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGestionCurriculums.Views.OtrasActividades.FicViOtrasActividadesItem"
             Title="REGISTRO DE IDIOMA">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout  Padding="20">
              
                <Label Text="Descripción" />
                <Editor Text="{Binding NuevaOtraActividad.DesActividad}"
                        HeightRequest="80"/>

                <Label Text="Observaciones" />
                <Editor Text="{Binding NuevaOtraActividad.Observaciones}"
                        HeightRequest="80"/>

                <Label Text="Activo" />
                <Switch Toggled="OnToogleSwitchActivo" x:Name="switchActivo"/>

                <Label Text="Borrado" />
                <Switch Toggled="OnToogleSwitchBorrado" x:Name="switchBorrado"/>
                
                <Button Text="Guardar" Command="{Binding FicMetSaveCommand}"/>
                <!--<Button Text="Eliminar" Command="{Binding FicMetDeleteCommand}"/>-->
                <Button Text="Cancelar" Command="{Binding FicMetCancelCommand}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>