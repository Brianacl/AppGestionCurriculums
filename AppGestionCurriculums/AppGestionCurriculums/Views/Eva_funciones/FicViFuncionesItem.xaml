<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGestionCurriculums.Views.Eva_funciones.FicViFuncionesItem"
             Title="REGISTRO DE FUNCIÓN">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
               
                <Label Text="Descripción" />
                <Entry Text="{Binding NuevaFuncion.DesActividad}"/>

                <Label Text="Detalle" />
                <Editor Text="{Binding NuevaFuncion.Detalle}"
                        HeightRequest="80"/>

                <Label Text="Activo" />
                <Switch Toggled="OnToogleSwitchActivo" x:Name="switchActivo"/>

                <Label Text="Borrado" />
                <Switch Toggled="OnToogleSwitchBorrado" x:Name="switchBorrado"/>
                
                <Button Text="Guardar" Command="{Binding FicMetSaveCommand}"/>
                <!--<Button Text="Eliminar" Command="{Binding FicMetDeleteCommand}"/>-->
                <Button Text="Cancelar" Command="{Binding FicMetCancelCommand}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>